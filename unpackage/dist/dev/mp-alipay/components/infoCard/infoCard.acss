.infoCard {
  height: 80px;
  width: 100%;
  background: #FFFFFF;
  margin: 15px 0;
  display: flex;
  justify-content: space-around;
}
.infoCard .leftDiv {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 10%;
  margin-left: 5px;
}
.infoCard .leftDiv image {
  height: 30px;
  width: 30px;
}
.infoCard .centerDiv {
  flex: 60%;
  padding-left: 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}
.infoCard .centerDiv .centerTop {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.infoCard .centerDiv .centerTop text {
  font-weight: bold;
  width: 85%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.infoCard .centerDiv .centerTop image {
  height: 35px;
  width: 35px;
}
.infoCard .centerDiv .centerBottom {
  display: flex;
  flex-wrap: nowrap;
}
.infoCard .centerDiv .centerBottom text {
  font-size: 14px;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #666666;
}
.infoCard .rightDiv {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 30%;
}
.infoCard .rightDiv .btnColor {
  background: #1CBC9C;
  padding: 0 10px;
  font-size: 14px;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #FFFFFF;
  border-radius: 4px;
}
.infoCard .hiddenText {
  width: 70px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
  margin-left: 7px;
}

